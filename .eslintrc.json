{
  "env": {
      "browser": true,
      "es6": true
  },
  "extends": [
      "airbnb-base"
  ],
  "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
  },
  "rules": {
      "no-console": 0,
      "no-unused-vars": "error",
      "no-throw-literal": 0,
      "quotes": [
      "error",
      "single",
      {
          "allowTemplateLiterals": true
      }
      ],
      "semi-style": ["error", "last"],
      "max-len": [
      "error",
      {
          "code": 80
      }
      ],
      "no-irregular-whitespace": "error",
      "no-trailing-spaces": "error",
      "no-multi-spaces": "error",
      "eqeqeq": ["error", "always"],
      "camelcase": 2,
      "prefer-const": ["error", {
      "destructuring": "any",
      "ignoreReadBeforeAssign": false
      }]
  }
}